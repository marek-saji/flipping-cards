{
  "name": "flipping-cards",
  "version": "1.0.0-alpha",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "rm -rf .git/hooks; ln -sfn ../hooks .git/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marek-saji/flipping-cards.git"
  },
  "keywords": [
    "language",
    "learning",
    "memory"
  ],
  "author": "Marek ‘saji’ Augustynowicz <marek.aug@gmail.com> (https://twitter.com/saji_)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marek-saji/flipping-cards/issues"
  },
  "homepage": "https://github.com/marek-saji/flipping-cards#readme",
  "devDependencies": {
    "eslint": ">=4.18.2",
    "stylelint": "^7.0.3",
    "stylelint-config-standard": "^11.0.0"
  },
  "browser-sync": {
    "files": [
      "**/*.js",
      "**/*.html",
      "**/*.css"
    ],
    "watchOptions": {
      "ignoreInitial": true,
      "ignored": [
        "node_modules"
      ]
    },
    "server": true
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "globals": {
      "FlippingCard": false
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "never"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 4,
      "max-empty-lines": 3,
      "block-opening-brace-newline-before": "always-multi-line",
      "block-opening-brace-space-before": null
    }
  }
}
